<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FD6B35" />
            <stroke
                android:width="1dp"
                android:color="#FD6B35" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FD6B35"
                android:endColor="#FD6B35"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FD6B35" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>