<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppBaseTheme" parent="android:Theme.Holo">
    </style><!-- Application theme. -->
    
    <style name="activities" parent="EasyClickTheme">
        <item name="android:background">#122320</item>
    </style>
    
     <style name="ActionBar.Solid.Easyclick" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_easyclick</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_easyclick</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_easyclick</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Easyclick</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.Solid.Easyclick</item>
    </style>

	<style name="ActionBar.TitleTextStyle.Solid.Easyclick" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textColor">#FFFFFF</item>
	</style>

    <style name="ActionBar.Transparent.Easyclick" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_easyclick</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Easyclick</item>
    </style>

    <style name="PopupMenu.Easyclick" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_easyclick</item>	
    </style>

    <style name="DropDownListView.Easyclick" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_easyclick</item>
    </style>

    <style name="ActionBarTabStyle.Easyclick" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_easyclick</item>
    </style>

    <style name="DropDownNav.Easyclick" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_easyclick</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_easyclick</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_easyclick</item>
    </style>
    
    <style name="ProgressBar.Easyclick" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_easyclick</item>
    </style>
    
    <style name="ActionButton.CloseMode.Easyclick" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_easyclick</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Easyclick.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Easyclick</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Easyclick</item>
    </style>
    
    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="button_cancel">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="EditTexteasyClick" parent="android:Widget.EditText">
        <item name="android:background">@drawable/easyclick_edit_text_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ProgressBareasyClick" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/easyclick_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/easyclick_progress_indeterminate_horizontal_holo_dark</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
    <style name="ListView.EasyClick" parent="@android:style/Widget.ListView">
	    <item name="android:listSelector">@drawable/list_selector</item>
	</style>

</resources>