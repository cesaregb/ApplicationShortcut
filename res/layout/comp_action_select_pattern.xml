<?xml version="1.0" encoding="utf-8"?>

<!-- 
	2nd step on the applicatoin selection
	Show application information and SELECT_PATERN component.
 -->
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_app_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cuadrito" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textSize="18sp" />
        
    </LinearLayout>
    
	<TextView
	    android:id="@+id/selected_pattern"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:padding="16dp"
	    android:textSize="18sp" />
    
     <com.il.appshortcut.android.views.LuncherPatternView
        android:id="@+id/luncher_widget"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp" />
     
     <Button 
        android:id="@+id/assignPattern"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Assign Pattern"
        android:onClick="assignPattern"
        style="@style/button">
        
    </Button>
     
		
</LinearLayout>